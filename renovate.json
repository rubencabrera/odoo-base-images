{
  "baseBranches": ["12.x", "14.x"],
  "regexManagers": [
    {
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker",
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "FROM\\s+(?<depName>.*):(?<currentValue>.*)"
      ]
    }
  ],
  "packageRules": [
    {
      "matchDatasources": ["docker"]
    }
  ],
  "semanticCommits": "enabled",
  "semanticCommitType": "build"
}
